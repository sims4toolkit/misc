{
  "title": "JSON schema for S4TK documentation version info files.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  
  "type": "object",
  "properties": {
    "knownIssues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "title",
          "description"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "negligible",
              "moderate",
              "high",
              "critical"
            ]
          },
          "description": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      }
    }
  }
}